<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<!-- Hibernate Generator by Javier Hernandez -->
<hibernate-mapping>
    <class name="es.sm2.openppm.core.model.impl.Customer" table="customer">
        <id name="idCustomer" type="java.lang.Integer">
            <column name="IdCustomer" />
            <generator class="native">
                <param name="sequence">customer_SEQ</param>
            </generator>
        </id>
        <many-to-one name="customertype" class="es.sm2.openppm.core.model.impl.Customertype" fetch="select">
            <column name="idCustomerType" />
        </many-to-one>
        <many-to-one name="company" class="es.sm2.openppm.core.model.impl.Company" fetch="select">
            <column name="IdCompany" />
        </many-to-one>
        <property name="name" type="string">
            <column name="name" length="100" not-null="true" />
        </property>
        <property name="description" type="string">
            <column name="description" length="500" />
        </property>
        <set name="projects" inverse="true" lazy="true" table="project" fetch="select">
            <key>
                <column name="idCustomer" />
            </key>
            <one-to-many class="es.sm2.openppm.core.model.impl.Project" />
        </set>
        <set name="learnedLessons" inverse="true" lazy="true" table="learnedlesson" fetch="select">
            <key>
                <column name="idCustomer" />
            </key>
            <one-to-many class="es.sm2.openppm.core.model.impl.LearnedLesson" />
        </set>
    </class>
</hibernate-mapping>
